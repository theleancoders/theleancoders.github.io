<% if (site.posts.length){ %>
<div class="p-t-50">
  <h4 class="font-italic m-t-0 m-b-20">Latest Posts</h4>

  <ul class="list-unstyled widget-posts">
      <% site.posts.sort('date', -1).limit(5).each(function(post){ %>
        <li class="clearfix">
            <a href=""><img src="images/blog/4.jpg" alt="" class="widget-posts-img"></a>
            <div class="widget-posts-descr">
                <a href="#" title="" class="font-600 text-overflow"><%= post.title || '(no title)' %></a>
                <div class="font-13 text-muted"><%= post.date %>><span class="slash-divider"> - </span> John Doe</div>
            </div>
        </li>
      <% }) %>
  </ul>
</div>
<% } %>
